<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>DPS</title>
    <script>
      function filterTable() {
        const filterYear = document.getElementById("yearFilter").value.toLowerCase();
        const filterOpini = document.getElementById("opiniFilter").value.toLowerCase();
        const tableRows = document.querySelectorAll("tbody tr");

        tableRows.forEach((row) => {
          const yearCell = row.querySelector("td:nth-child(3)").textContent.toLowerCase();
          const opiniCell = row.querySelector("td:nth-child(2)").textContent.toLowerCase();

          if (
            (filterYear === "" || yearCell.includes(filterYear)) &&
            (filterOpini === "" || opiniCell.includes(filterOpini))
          ) {
            row.style.display = ""; // Tampilkan baris
          } else {
            row.style.display = "none"; // Sembunyikan baris
          }
        });
      }
    </script>
  </head>
  <body>
    <%- include('../components/navbar.ejs') %>

    <div class="container my-4">
      <h1>Dewan Pengawas Syriah (DPS)</h1>

      <!-- Form Upload File -->
      <form enctype="multipart/form-data" action="/upload" method="POST">
        <div class="mb-3">
          <label for="fileUpload" class="form-label">Upload File</label>
          <input
            type="file"
            class="form-control"
            id="fileUpload"
            name="fileUpload"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>

      <!-- Filter Section -->
      <div class="row mt-4">
        <div class="col-md-4">
          <label for="yearFilter" class="form-label">Filter by Year</label>
          <select id="yearFilter" class="form-select" onchange="filterTable()">
            <option value="">All Years</option>
            <option value="2024">2024</option>
            <option value="2023">2023</option>
            <option value="2022">2022</option>
            <!-- Tambahkan tahun sesuai kebutuhan -->
          </select>
        </div>
        <div class="col-md-4">
          <label for="opiniFilter" class="form-label">Filter by Opini/Risalah Rapat</label>
          <input
            type="text"
            id="opiniFilter"
            class="form-control"
            placeholder="Search Opini/Risalah"
            onkeyup="filterTable()"
          />
        </div>
      </div>

      <!-- Tabel Uploaded Files -->
      <h2 class="mt-4">Uploaded Files</h2>
      <table class="table table-striped table-bordered mt-3">
        <thead>
          <tr>
            <th>No</th>
            <th>Opini/Risalah Rapat</th>
            <th>Date (Tahun)</th>
            <th>No Opini/Risalah Rapat</th>
            <th>Tanggal Masehi</th>
            <th>Agenda/Perihal</th>
            <th>Judul Opini</th>
            <th>Kelompok</th>
            <th>Kategori</th>
            <th>Sub Kategori</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Sample data, replace with dynamic content from the backend -->
          <tr>
            <td>1</td>
            <td>Opini Example</td>
            <td>2024</td>
            <td>OP-001</td>
            <td>2024-11-01</td>
            <td>Perihal A</td>
            <td>Judul A</td>
            <td>Kelompok A</td>
            <td>Kategori A</td>
            <td>Sub Kategori A</td>
            <td>
              <button class="btn btn-sm btn-warning">Edit</button>
              <button class="btn btn-sm btn-danger">Delete</button>
            </td>
          </tr>
          <tr>
            <td>2</td>
            <td>Opini Example 2</td>
            <td>2023</td>
            <td>OP-002</td>
            <td>2023-10-12</td>
            <td>Perihal B</td>
            <td>Judul B</td>
            <td>Kelompok B</td>
            <td>Kategori B</td>
            <td>Sub Kategori B</td>
            <td>
              <button class="btn btn-sm btn-warning">Edit</button>
              <button class="btn btn-sm btn-danger">Delete</button>
            </td>
          </tr>
          <!-- End of sample data -->
        </tbody>
      </table>
    </div>


    <%- include('../components/footer.ejs') %>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
